<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{movies.image}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{movies.title}}</h5>
        <p class="card-text">{{movies.description}}</p>
        <p>{{movies.stars}}</p>
        <p>{{movies.director}}</p>
        <p class="card-text"><small class="text-muted">{{movies.showtimes}}</small></p>
      </div>
    </div>
  </div>
</div>

